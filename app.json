{
  "expo": {
    "name": "japp",
    "slug": "japp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      ["expo-camera",
      {
        "cameraPermission": "Permite $(japp) accessar a sua câmera",
        "savePhotosPermission":"Permita $(japp) salvar suas fotos.",
        "isAccessMediaLocationEnabled": true
      }
    ],
    [
      "expo-media-library",
      {
        "photosPermission": "Permita $(japp) acessar suas fotos.",
        "savePhotosPermission": "Permita $(japp) salvar suas fotos.",
        "isAccessMediaLocationEnabled": true
      }
    ],
    [
      "expo-image-picker",
      {
        "photosPermission": "O aplicativo acessa suas fotos para que você possa compartilhá-las com seus amigos."
      }
    ],
    [
      "expo-location", 
      {
      "locationAlwaysAndWhenInUsePermission": "Permita $(japp) acessar sua localização."
    }
    ]
  ]
  }
}
